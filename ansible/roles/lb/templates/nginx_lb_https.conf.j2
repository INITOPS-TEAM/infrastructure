upstream flask_app {
{% for h in groups['app'] %}
    server {{ hostvars[h]['private_ip_address'] }}:5000 max_fails=3 fail_timeout=30s;
{% endfor %}
}

server {
    listen 80;
    server_name {{ lb_domain }};

    location ^~ /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
        default_type "text/plain";
        try_files $uri =404;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name {{ lb_domain }};

    ssl_certificate     /etc/letsencrypt/live/{{ lb_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ lb_domain }}/privkey.pem;

    location / {
        proxy_pass http://flask_app;

        proxy_http_version 1.1;
        proxy_set_header Connection "";

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        proxy_connect_timeout 3s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
        send_timeout 30s;
    }
}
